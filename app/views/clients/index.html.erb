<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Clients</h1>
  <div class="row">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Date de Naissance</th>
            <th>Numéro d'Assurance Social</th>
            <th>Adresse</th>
            <th>Nombre d'Enfant</th>
            <th>Compte Taxes Propriétaire</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.Prenom %></td>
              <td><%= client.Nom %></td>
              <td><%= client.DateNaissance %></td>
              <td><%= client.nas %></td>
              <td><%= client.Adress.Ville  %></td>
              <td><%= client.NombresEnfants %></td>
              <td><%= client.CompteTaxesProprietaire %></td>
              <td><%= link_to 'Afficher', client, class: "btn btn-warning" %></td>
              <td><%= link_to 'Modifier', edit_client_path(client), class: "btn btn-info" %></td>
              <td><%= link_to 'Supprimer', client, class: "btn btn-danger" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'Nouveau Client', new_client_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
